@{
    Layout = "";    
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/style-login.css">
	<title>Login Page</title>
</head>
<style>
	 ::placeholder{
		color :#BBBBBB !important;
		opacity:1;
	} 
</style>

<body>
	@using (Html.BeginForm("ForgotPasswordAction", "Account", FormMethod.Post))
		{
<div class="login-wrap">
	<div class="login-html">
		<div class="login-form">
			<h2  style="color:white"><img style="height:100px"src="~/images/logo.jpg"/></h2>
		<br/><br/>
		<p style="color: yellow;font-family:arial;font-size:14px;">@ViewBag.message</p>
		
		
  		<input type="text" name="currentEmail" placeholder="Enter email address to reset your password" class="form-control" aria-describedby="helpId" required>
		<br/><br/>
		
		<button type="submit" style="border-radius:30px;width:100%"class="btn btn-primary">Submit</button>
		
		<div class="hr"></div>
		
		<br><br>
	
		</div>
	</div>
</div>
}
</body>

