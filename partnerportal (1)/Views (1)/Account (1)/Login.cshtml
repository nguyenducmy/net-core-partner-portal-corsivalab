@{
    Layout = "";    
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/style-login.css">
	<title>Corsiva Lab Portal</title>
	<link rel="shortcut icon" href="~/images/logo.jpg" />
</head>

<body>
	@using (Html.BeginForm("UserLogin", "Account", FormMethod.Post))
		{
<div class="login-wrap">
	<div class="login-html">
		<div class="login-form">
			<h2  style="color:white"><img style="height:100px"src="~/images/logo.jpg"/></h2>
		<br/><br/>
		<p style="color: red;font-family:arial;font-size:14px;">@ViewBag.message</p>
		<label for="" class="form-label">Username</label>
	    <input type="text" name="username" class="form-control" aria-describedby="helpId">
		<br/><br/>
		<label for="" class="form-label">Password</label>
  		<input type="password" name="password" class="form-control" aria-describedby="helpId">
		<br/><br/>
		<button type="submit" style="border-radius:30px;width:100%"class="btn btn-primary">Submit</button>
		<br>
		<div class="hr"></div>
		<div class="foot-lnk">
			<a href="@Url.Action("ForgotPassword", "Account")">Forgot Password?</a>
		</div>
		<br><br>
		<div class="sign-up"style="font-size:12px;color:#aaa">
			<a>If you are interested to become our partners, please write in to </a>
			<a href="@Url.Action("RegisterPartner", "Account")"style="color:lightblue">admin@corsivalab.com</a>
		</div>
		</div>
	</div>
</div>
}
</body>
